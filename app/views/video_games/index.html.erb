    <div class="row">
      <% @video_games.each do |video_game| %>
        <div class="col-sm-4">
            <div class="card-trip flex mb-3">
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path video_game.photo.key %>')"></div>
                <div class="container card-category-infos pt-1">
                  <h4><%= link_to video_game.title, video_game_path(video_game), class: "card-category-h4 link-dark text-decoration-none" %></h4>
                  <p><strong>Year: </strong><%= video_game.year %></p>
                  <p><strong>Console: </strong><%= video_game.console %></p>
                  <p><strong>Genre: </strong> <%= video_game.genre %></p>
                  <p><strong>Publisher: </strong> <%= video_game.publisher %></p>
